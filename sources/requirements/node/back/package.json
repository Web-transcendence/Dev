{
  "name": "trans_node_back",
  "type": "module",
  "scripts": {
    "dev": "nodemon -e 'ts,html,json' -w ../.. -x \"npm run build-and-serve\"",
    "build-and-serve": "run-s build serve",
    "serve": "node ./dist/index.js",
    "build:front": "npm run --prefix=../front build:front",
    "build:back": "run-s build-css && tsc",
    "build": "run-p build:front build:back",
    "build-css": "npx @tailwindcss/cli -i ./src/static/tail/input.css -o ./src/static/tail/output.css"
  },
  "dependencies": {
    "@fastify/formbody": "^8.0.2",
    "@fastify/static": "^8.1.1",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.8.1",
    "dompurify": "^3.2.4",
    "fastify": "^5.2.1",
    "sanitize-html": "^2.14.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.13.1",
    "@types/sqlite3": "^3.1.11",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
