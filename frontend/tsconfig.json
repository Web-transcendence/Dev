{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "public/dist",
    "rootDir": "src",
    "moduleResolution": "nodenext",
    "lib": ["dom", "ESNext"]
  },
}